<!DOCTYPE html>
<html>
<head>
  <title>Telegram Time Offset</title>
</head>
<body>
  <h2 id="source"></h2>
  <h1 id="time"></h1>

  <script>
    function getAdjustedTime(offsetSeconds) {
      const now = new Date();
      const adjusted = new Date(now.getTime() + offsetSeconds * 1000);
      return adjusted.toLocaleTimeString();
    }

    const referrer = document.referrer;
    let offset = 0;

    if (referrer.includes("t.me")) {
      offset = -10; // Telegram users see time 10 seconds earlier
      document.getElementById("source").innerText = "Opened via Telegram";
    } else {
      document.getElementById("source").innerText = "Opened via Browser";
    }

    setInterval(() => {
      document.getElementById("time").innerText = getAdjustedTime(offset);
    }, 1000);
  </script>
</body>
</html>